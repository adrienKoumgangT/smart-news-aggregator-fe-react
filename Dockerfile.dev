# Dockerfile (for dev)
FROM node:20

# Set working directory
WORKDIR /app

# Install dependencies
COPY package*.json ./
RUN npm install

# Copy source code
COPY . .

# Expose default Vite dev port
EXPOSE 5173

# Required for Vite to bind to all IPs
ENV HOST 0.0.0.0

# Start dev server
CMD ["npm", "run", "dev"]


